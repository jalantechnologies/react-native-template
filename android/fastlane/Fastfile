# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do

  lane :deploy_android_production do
    # 1) Read version name from package.json (bumped in workflow)
    package_json_path = File.expand_path("../../package.json", __dir__)
    package_version = JSON.parse(File.read(package_json_path))["version"]

    version_parts = package_version.to_s.split(".").map(&:to_i)
    UI.user_error!("âŒ Invalid package version: #{package_version}") if version_parts.length != 3

    updated_version_code = (version_parts[0] * 10_000) + (version_parts[1] * 100) + version_parts[2]
    version_name = package_version

    # Write changelog file for Google Play
    release_notes = ENV["RELEASE_NOTES"]
    if release_notes && !release_notes.strip.empty?
      changelog_dir = "android/fastlane/metadata/android/en-US/changelogs"
      FileUtils.mkdir_p(changelog_dir)

      default_changelog_path = File.join(changelog_dir, "default.txt")
      version_changelog_path = File.join(changelog_dir, "#{updated_version_code}.txt")

      File.write(default_changelog_path, release_notes)
      File.write(version_changelog_path, release_notes)

      UI.message("ðŸ“ Wrote changelogs: #{default_changelog_path}, #{version_changelog_path}")
    else
      UI.message("âš ï¸ No release notes provided. Skipping changelog creation.")
    end

    # 2) Build with injected versionCode + versionName
    gradle(
      task: "bundle",
      build_type: "release",
      properties: {
        "android.injected.signing.store.file" => ENV["ANDROID_KEYSTORE_FILE"],
        "android.injected.signing.store.password" => ENV["ANDROID_KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["ANDROID_KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["ANDROID_KEY_PASSWORD"],
        "versionCode" => updated_version_code.to_s,
        "versionName" => version_name
      }
    )

    # 3) Upload (supply automatically picks changelog)
    upload_to_play_store(
      track: "internal",
      release_status: "draft",
      json_key: ENV["ANDROID_JSON_KEY_FILE"],
      skip_upload_apk: true,
      skip_upload_metadata: false,
      skip_upload_changelogs: false
    )
  end



  desc "Deploy APK to Firebase App Distribution (PR Preview)"
  lane :pr_deploy do |options|
    # Load the deploy script
    load './scripts/firebase_pr_deploy.rb'
    firebase_pr_deploy(
      pr_number: options[:pr_number],
      pr_title: options[:pr_title],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json",
      release_notes: ENV["RELEASE_NOTES"] 
    )

  end

  desc "Clean up Firebase App Distribution releases for closed PR"
  lane :pr_cleanup do |options|
    # Load the cleanup script
    load './scripts/firebase_pr_cleanup.rb'
    firebase_pr_cleanup(
      pr_number: options[:pr_number],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json" # Path to GCP service account key
    )
  end
end
