default_platform(:android)

platform :android do

  desc "Fetches the latest version code from the Play Console and increments it by 1"
  lane :fetch_and_increment_build_number do
    app_identifier = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)

    version_codes = google_play_track_version_codes(
      package_name: app_identifier,
      track: "internal",
      json_key: ENV["ANDROID_JSON_KEY_FILE"]
    )
    
    updated_version_code = version_codes[0] + 1
    
    increment_version_code(
      version_code: updated_version_code
    )
    
    UI.success("âœ… Incremented version code to: #{updated_version_code}")
  end

  desc "Deploy a new version to the Google Play (Production)"
  lane :deploy_android_production do
    # Sync versions from package.json first
    version_info = sync_versions
    UI.message("ðŸ“¦ Using version: #{version_info[:version]} (code: #{version_info[:version_code]})")
    
    gradle(
      task: "bundle",
      build_type: "release",
      properties: {
        "android.injected.signing.store.file" => ENV["ANDROID_KEYSTORE_FILE"],
        "android.injected.signing.store.password" => ENV["ANDROID_KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["ANDROID_KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["ANDROID_KEY_PASSWORD"],
      }
    )
    
    # Read release notes from environment variable
    release_notes_text = ENV["RELEASE_NOTES"] || ""
    
    if release_notes_text.empty?
      UI.message("âš ï¸  No release notes provided")
    else
      UI.message("ðŸ“– Using release notes from RELEASE_NOTES environment variable")
    end
    
    # Prepare release notes for Play Store (supports multiple languages)
    release_notes_hash = release_notes_text.empty? ? nil : { "en-US" => release_notes_text }
    
    upload_to_play_store(
      track: "production",
      release_status: "draft",
      json_key: ENV["ANDROID_JSON_KEY_FILE"],
      skip_upload_apk: true,
      release_notes: release_notes_hash
    )
    
    UI.success("âœ… Android app uploaded to Google Play Console (internal track, draft)")
  end

  desc "Deploy APK to Firebase App Distribution (PR Preview)"
  lane :pr_deploy do |options|
    # Sync versions from package.json first
    version_info = sync_versions
    UI.message("ðŸ“¦ Using version: #{version_info[:version]} (code: #{version_info[:version_code]})")
    
    # Load the deploy script
    load './scripts/firebase_pr_deploy.rb'
    
    # Get release notes from environment
    release_notes = ENV["RELEASE_NOTES"] || ""
    
    firebase_pr_deploy(
      pr_number: options[:pr_number],
      pr_title: options[:pr_title],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json",
      release_notes: release_notes,
      version_info: version_info  # Pass version info to firebase script
    )
  end

  desc "Clean up Firebase App Distribution releases for closed PR"
  lane :pr_cleanup do |options|
    # Load the cleanup script
    load './scripts/firebase_pr_cleanup.rb'
    
    firebase_pr_cleanup(
      pr_number: options[:pr_number],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json"
    )
  end
end
