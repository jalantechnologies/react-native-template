# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do

  desc "Fetches the latest version code from the Play Console and increments it by 1"
  lane :fetch_and_increment_build_number do
    app_identifier = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier)

    version_codes = google_play_track_version_codes(
      package_name: app_identifier,
      track: "internal",
      json_key: ENV["ANDROID_JSON_KEY_FILE"]
    )
    
    updated_version_code = version_codes[0] + 1
    
    increment_version_code(
      version_code: updated_version_code
    )
    updated_version_code
  end

  lane :deploy_android_production do
  updated_version_code = fetch_and_increment_build_number

  # 1) Get version name
  package_json_path = File.expand_path("../../package.json", __dir__)
  version_name = JSON.parse(File.read(package_json_path))["version"]

  # 2) Load from docs/release_notes/x.y.z.md
  release_notes_path = File.expand_path("../../docs/release_notes/#{version_name}.md", __dir__)
  UI.user_error!("‚ùå Release notes not found at #{release_notes_path}") unless File.exist?(release_notes_path)

  release_notes = File.read(release_notes_path)

  # 3) Build app
  gradle(
    task: "bundle",
    build_type: "release",
    properties: {
      "android.injected.signing.store.file" => ENV["ANDROID_KEYSTORE_FILE"],
      "android.injected.signing.store.password" => ENV["ANDROID_KEYSTORE_PASSWORD"],
      "android.injected.signing.key.alias" => ENV["ANDROID_KEY_ALIAS"],
      "android.injected.signing.key.password" => ENV["ANDROID_KEY_PASSWORD"],
      "versionCode" => updated_version_code.to_s,
      "versionName" => version_name
    }
  )

  # --- NEW ---
  # 4) Create a TEMP metadata folder
  tmp_metadata = File.join(Dir.tmpdir, "fastlane_metadata_#{Time.now.to_i}")
  changelog_dir = File.join(tmp_metadata, "android/en-US/changelogs")
  FileUtils.mkdir_p(changelog_dir)

  changelog_path = File.join(changelog_dir, "#{updated_version_code}.txt")
  File.write(changelog_path, release_notes)

  UI.message("üìù Using temporary changelog for Play Store: #{changelog_path}")

  # 5) Upload with metadata_path (NO repo metadata!)
  upload_to_play_store(
    track: "internal",
    release_status: "draft",
    json_key: ENV["ANDROID_JSON_KEY_FILE"],
    metadata_path: tmp_metadata,   # ‚Üê magic line
    skip_upload_apk: true,
    skip_upload_metadata: false,
    skip_upload_changelogs: false
  )
end



  desc "Deploy APK to Firebase App Distribution (PR Preview)"
  lane :pr_deploy do |options|
    # Load the deploy script
    load './scripts/firebase_pr_deploy.rb'
    firebase_pr_deploy(
      pr_number: options[:pr_number],
      pr_title: options[:pr_title],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json",
      release_notes: ENV["RELEASE_NOTES"] 
    )

  end

  desc "Clean up Firebase App Distribution releases for closed PR"
  lane :pr_cleanup do |options|
    # Load the cleanup script
    load './scripts/firebase_pr_cleanup.rb'
    firebase_pr_cleanup(
      pr_number: options[:pr_number],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json" # Path to GCP service account key
    )
  end
end
