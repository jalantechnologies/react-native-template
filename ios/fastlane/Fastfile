default_platform(:ios)

platform :ios do
  desc "Fetch certificates for CI"
  lane :ci_signing_setup do
    match(type: "appstore", readonly: true)
  end

  desc "Build and upload to TestFlight"
  lane :pr_deploy do
    sh("security find-identity -v -p codesigning")
    sh("ls ~/Library/MobileDevice/Provisioning\\ Profiles")
    UI.message("✅ FASTLANE_PASSWORD is set: #{ENV['FASTLANE_PASSWORD'] ? '✔' : '❌'}")
    UI.message("✅ FASTLANE_USER: #{ENV['FASTLANE_USER']}")
    UI.message("✅ MATCH_PASSWORD is set: #{ENV['MATCH_PASSWORD'] ? '✔' : '❌'}")

    match(type: "appstore", readonly: true, verbose: true)
    sh("security find-identity -v -p codesigning")
    sh("ls ~/Library/MobileDevice/Provisioning\\ Profiles")
    build_app(
      clean: true,
      scheme: "Boilerplate",
      export_method: "app-store",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
        "com.bettrsw.boilerplate" => "match AppStore com.bettrsw.boilerplate"
        }
      },
    )

    upload_to_testflight(
      changelog: "PR Build - automated upload",
      distribute_external: true
    )

  end
end
