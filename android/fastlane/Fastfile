# Fastlane configuration for the Android app.
# Supports both preview (Firebase App Distribution) and production (Google Play) deployments.
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do

  desc "Fetches the latest version code from the Play Console and increments it by 1"
  lane :fetch_and_increment_build_number do
    app_identifier = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier) ||
                     CredentialsManager::AppfileConfig.try_fetch_value(:package_name)

    version_codes = google_play_track_version_codes(
      package_name: app_identifier,
      track: "internal",
      json_key: ENV["ANDROID_JSON_KEY_FILE"]
    )
    
    updated_version_code = version_codes[0] + 1
    
    increment_version_code(
      version_code: updated_version_code
    )
    updated_version_code
  end

  lane :deploy_android_production do
    package_json_path = File.expand_path("../../package.json", __dir__)
    package_json = JSON.parse(File.read(package_json_path))
    version_name = package_json["version"]
    UI.user_error!("âŒ Version not found in package.json") unless version_name

    app_identifier = CredentialsManager::AppfileConfig.try_fetch_value(:app_identifier) ||
                     CredentialsManager::AppfileConfig.try_fetch_value(:package_name)
    UI.user_error!("âŒ App identifier not configured") unless app_identifier

    version_codes = google_play_track_version_codes(
      package_name: app_identifier,
      track: "internal",
      json_key: ENV["ANDROID_JSON_KEY_FILE"]
    )

    version_code = if version_codes&.any?
      latest_code = version_codes.max
      UI.message("ðŸ“¦ Latest Play Console versionCode detected: #{latest_code}")
      latest_code + 1
    else
      UI.message("â„¹ï¸ No existing version codes found on Play Console. Starting at 1.")
      1
    end

    # Write changelog file for Google Play (default.txt only)
    release_notes = ENV["RELEASE_NOTES"]
    if release_notes && !release_notes.strip.empty?
      changelog_dir = "android/fastlane/metadata/android/en-US/changelogs"
      FileUtils.mkdir_p(changelog_dir)

      changelog_path = File.join(changelog_dir, "default.txt")
      File.write(changelog_path, release_notes)

      UI.message("ðŸ“ Wrote default changelog: #{changelog_path}")
    else
      UI.message("âš ï¸ No release notes provided. Skipping changelog creation.")
    end

    # 3) Build with injected versionCode + versionName
    gradle(
      task: "bundle",
      build_type: "release",
      properties: {
        "android.injected.signing.store.file" => ENV["ANDROID_KEYSTORE_FILE"],
        "android.injected.signing.store.password" => ENV["ANDROID_KEYSTORE_PASSWORD"],
        "android.injected.signing.key.alias" => ENV["ANDROID_KEY_ALIAS"],
        "android.injected.signing.key.password" => ENV["ANDROID_KEY_PASSWORD"],
        "versionCode" => version_code.to_s,
        "versionName" => version_name
      }
    )

    # 4) Upload (supply automatically picks changelog)
    upload_to_play_store(
      track: "internal",
      release_status: "draft",
      json_key: ENV["ANDROID_JSON_KEY_FILE"],
      skip_upload_apk: true,
      skip_upload_metadata: false,
      skip_upload_changelogs: false
    )
  end



  desc "Deploy APK to Firebase App Distribution (PR Preview)"
  lane :pr_deploy do |options|
    # Load the deploy script
    load './scripts/firebase_pr_deploy.rb'
    firebase_pr_deploy(
      pr_number: options[:pr_number],
      pr_title: options[:pr_title],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json",
      release_notes: ENV["RELEASE_NOTES"] 
    )

  end

  desc "Clean up Firebase App Distribution releases for closed PR"
  lane :pr_cleanup do |options|
    # Load the cleanup script
    load './scripts/firebase_pr_cleanup.rb'
    firebase_pr_cleanup(
      pr_number: options[:pr_number],
      project_number: options[:project_number],
      app_id: options[:app_id],
      service_account_path: "/tmp/gcp_key.json" # Path to GCP service account key
    )
  end
end
