default_platform(:ios)

platform :ios do
  desc "Fetch certificates for CI"
  lane :ci_signing_setup do
    match(type: "appstore", readonly: true, keychain_name: "ci.keychain", keychain_password: ENV["KEYCHAIN_PASSWORD"])
    match(type: "development", readonly: true, keychain_name: "ci.keychain", keychain_password: ENV["KEYCHAIN_PASSWORD"])
  end

  desc "Build and upload to TestFlight"
  lane :pr_deploy do
    sh("security find-identity -v -p codesigning")
    sh("ls ~/Library/MobileDevice/Provisioning\\ Profiles")
    UI.message("✅ FASTLANE_PASSWORD is set: #{ENV['FASTLANE_PASSWORD'] ? '✔' : '❌'}")
    UI.message("✅ FASTLANE_USER: #{ENV['FASTLANE_USER']}")
    UI.message("✅ MATCH_PASSWORD is set: #{ENV['MATCH_PASSWORD'] ? '✔' : '❌'}")
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_KEY"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_content: Base64.decode64(ENV["APP_STORE_CONNECT_API_KEY_B64"]),
      in_house: false
    )
    match(type: "appstore", readonly: true, verbose: true, keychain_name: "ci.keychain", keychain_password: ENV["KEYCHAIN_PASSWORD"])
    sh("security find-identity -v -p codesigning")
    sh("ls ~/Library/MobileDevice/Provisioning\\ Profiles")
    increment_build_number(
      xcodeproj: "Boilerplate.xcodeproj"
    )

    build_app(
      clean: true,
      scheme: "Boilerplate",
      export_method: "app-store",
      export_options: {
        signingStyle: "manual",
        provisioningProfiles: {
        "com.bettrsw.boilerplate" => "match AppStore com.bettrsw.boilerplate"
        }
      },
    )
    
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_ISSUER_ID"],
      key_content: Base64.decode64(ENV["APP_STORE_CONNECT_PRIVATE_KEY"]),
      in_house: false
    )

    upload_to_testflight(
      changelog: "PR Build - automated upload",
      distribute_external: true,
      skip_waiting_for_build_processing: true,
      username: ENV["FASTLANE_USER"],
      apple_id: "6747346204",
      app_identifier: "com.bettrsw.boilerplate"
    )
  end
end
