# Resolve react_native_pods.rb with node to allow for hoisting
source 'https://cdn.cocoapods.org/'
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

# Target iOS 16.6+ to align with Xcode 26 toolchains.
platform :ios, '16.6'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage != nil
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'Boilerplate' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  target 'BoilerplateTests' do
    inherit! :complete
    # Pods for testing
  end

  post_install do |installer|
    # https://github.com/facebook/react-native/blob/main/packages/react-native/scripts/react_native_pods.rb#L197-L202
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # Xcode 26 / Swift 6 toolchains no longer ship SwiftCompatibility56 libs.
    # Datadog static libs still force-load those symbols, so we tell the linker
    # to ignore them to avoid "undefined symbols __swift_FORCE_LOAD_$_swiftCompatibility56".
    symbols_to_ignore = %w[
      __swift_FORCE_LOAD_$_swiftCompatibility56
      __swift_FORCE_LOAD_$_swiftCompatibilityConcurrency
    ]

    append_ldflags = lambda do |targets|
      targets.each do |target|
        target.build_configurations.each do |config|
          flags = Array(config.build_settings['OTHER_LDFLAGS'])
          symbols_to_ignore.each do |sym|
            flag = "-Wl,-U,#{sym}"
            flags << flag unless flags.include?(flag)
          end
          config.build_settings['OTHER_LDFLAGS'] = flags
        end
      end
    end

    # Apply to app/test targets (user project) and Pods aggregates so the flags
    # end up in the generated xcconfigs used during final link.
    installer.aggregate_targets.each do |aggregate_target|
      append_ldflags.call(aggregate_target.user_project.native_targets)
    end
    append_ldflags.call(installer.pods_project.targets)
  end
end
