default_platform(:ios)

platform :ios do
  desc "Fetch certificates for CI"
  lane :ci_signing_setup do
    match(type: "appstore", readonly: true, keychain_name: "ci.keychain", keychain_password: ENV["KEYCHAIN_PASSWORD"])
    match(type: "development", readonly: true, keychain_name: "ci.keychain", keychain_password: ENV["KEYCHAIN_PASSWORD"])
  end

  desc "Build and upload to TestFlight"
  lane :pr_deploy do
    require_relative "scripts/ios_testflight_deploy"

    ios_testflight_deploy!(
      pr_number: ENV["PR_NUMBER"],
      app_identifier: "com.bettrsw.boilerplate",
      xcodeproj: "Boilerplate.xcodeproj",
      scheme: "Boilerplate",
      api_key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
      issuer_id: ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID'],
      api_key_b64: ENV['APP_STORE_CONNECT_API_KEY_B64'],
      keychain_name: "ci.keychain",
      keychain_password: ENV["KEYCHAIN_PASSWORD"],
      apple_id: ENV["APPLE_ID"],
      username: ENV["FASTLANE_USER"]
    )
  end
  desc "Cleanup TestFlight build for PR"
  lane :pr_cleanup do
    require_relative "scripts/ios_testflight_cleanup"

    ios_testflight_cleanup!(
      pr_number: ENV["PR_NUMBER"],
      app_identifier: "com.bettrsw.boilerplate",
      api_key_id: ENV['APP_STORE_CONNECT_API_KEY_ID'],
      issuer_id: ENV['APP_STORE_CONNECT_API_KEY_ISSUER_ID'],
      api_key_b64: ENV['APP_STORE_CONNECT_API_KEY_B64']
    )
  end
  desc "Cleanup TestFlight build for PR"
  lane :expire_build do
     pilot(
       app_identifier: "com.bettrsw.boilerplate", # Replace with your app's bundle identifier
       build_number: "2",  # Replace with the build number to expire
       version: "1.0"       # Replace with the version number
     )
   end

end
